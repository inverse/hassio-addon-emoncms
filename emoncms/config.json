{
  "name": "Emoncms",
  "version": "dev",
  "slug": "emoncms",
  "description": "Emoncms is a powerful open-source web-app for processing, logging and visualising energy, temperature and other environmental data.",
  "url": "https://github.com/inverse/hassio-addon-emoncms",
  "webui": "[PROTO:ssl]://[HOST]:[PORT:9541]",
  "panel_icon": "mdi:chart-arc",
  "startup": "system",
  "init": false,
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "services": ["mysql:want"],
  "map": ["ssl"],
  "ports": {
    "9541/tcp": 9541
  },
  "ports_description": {
    "9541/tcp": "Emoncms web interface"
  },
  "options": {
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem"
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "ssl": "bool",
    "certfile": "str",
    "keyfile": "str",
    "sql": { 
      "server": "str?",
      "name": "str?",
      "username": "str?",
      "password": "str?",
      "port": "int?"
    }
  }
}
